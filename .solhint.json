{
  "extends": "default",
  "rules": {
      "indent": ["error", 1],
      "no-mix-tabs-and-spaces": false,
      "quotes": ["error", "double"],
      "max-line-length": ["warning", 79],

      "reentrancy": "error",
      "avoid-sha3": "error",
      "avoid-suicide": "error",
      "avoid-throw": "error",
      "func-visibility": "error",
      "state-visibility": "error",
      "check-send-result": "error",
      "avoid-call-value": "error",
      "compiler-fixed": "warn",
      "compiler-gt-0_4": "warn",
      "no-complex-fallback": "error",
      "mark-callable-contracts": "error",
      "multiple-sends": "error",
      "no-simple-event-func-name": "warn",
      "avoid-tx-origin": "error",
      "no-inline-assembly": "warn",
      "not-rely-on-block-hash": "error",
      "avoid-low-level-calls": "warn",

      "func-name-mixedcase": "warn",
      "func-param-name-mixedcase": "warn",
      "var-name-mixedcase": "warn",
      "event-name-camelcase": "warn",
      "const-name-snakecase": "warn",
      "modifier-name-mixedcase": "warn",
      "contract-name-camelcase": "warn",
      "use-forbidden-name": "warn",
      "visibility-modifier-order": "warn",
      "imports-on-top": "warn",
      "two-lines-top-level-separator": "warn",
      "func-order": "warn",
      "bracket-align": "warn",
      "array-declaration-spaces": "warn",
      "separate-by-one-line-in-contract": "warn",
      "expression-indent": "warn",
      "statement-indent": "warn",
      "space-after-comma": "warn",
      "no-spaces-before-semicolon": "warn",

      "payable-fallback": "warn",
      "no-empty-blocks": "warn",
      "no-unused-vars": "warn",
      "function-max-lines": ["warn", 45],
      "code-complexity": ["warn", 7],
      "max-states-count": ["warn", 15]
  }
}